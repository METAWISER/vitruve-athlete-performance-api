{
  "name": "vitruve-athlete-performance-api",
  "version": "0.0.1",
  "description": "An API for managing athlete data and their performance metrics.",
  "main": "App.js",
  "scripts": {
    "test": "set NODE_ENV=test&& jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts ./src",
    "start": "set NODE_ENV=prod&& node dist/src/api/App.js",
    "build": "rimraf dist && tsc",
    "node:dev": "set NODE_ENV=dev&& node dist/src/api/server.start.js",
    "dev": "set NODE_ENV=dev&& ts-node-dev --inspect --respawn --pretty --transpile-only src/api/server.start.ts",
    "prisma:generate": "prisma generate --schema=src/shared/infrastructure/persistense/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=src/shared/infrastructure/persistense/prisma/schema.prisma",
    "sequelize:migration:create": "npx sequelize-cli migration:create --name",
    "sequelize:db:migrate": "npx sequelize-cli db:migrate",
    "sequelize:db:undo": "npx sequelize-cli db:migrate:undo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/METAWISER/vitruve-athlete-performance-api.git"
  },
  "keywords": [
    "api",
    "express",
    "nodejs",
    "typescript",
    "auth",
    "jwt",
    "authentication",
    "DDD",
    "SOLID"
  ],
  "author": "Carlos Zamora - @metawiser",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/METAWISER/vitruve-athlete-performance-api/issues"
  },
  "homepage": "https://github.com/METAWISER/vitruve-athlete-performance-api#readme",
  "dependencies": {
    "@hono/node-server": "^1.13.1",
    "@prisma/client": "^5.20.0",
    "awilix": "^11.0.0",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-validator": "^7.2.0",
    "glob": "^11.0.0",
    "hono": "^4.6.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.13.0",
    "sequelize": "^6.37.3",
    "sequelize-cli": "^6.6.2",
    "ts-node-dev": "^2.0.0",
    "tsc-watch": "^6.2.0",
    "uuid": "^10.0.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.2",
    "@types/node-fetch": "^2.6.11",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prisma": "^5.20.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  }
}
